<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a></li>
            <li class="main-header__item"><a class="<%= path === '/user-products' ? 'active' : '' %>" href="/products">Products</a></li>
            <% if(isAuth) { %>
                <li class="main-header__item"><a class="<%= path === '/addEdit-product' ? 'active' : '' %>" href="/admin/edit-prod">Add Product</a></li>
                <li class="main-header__item"><a class="<%= path === '/near-product' ? 'active' : '' %>" href="/admin/near-prod">Products Near Me</a></li>
                <li class="main-header__item"><a class="<%= path === '/show-product' ? 'active' : '' %>" href="/admin/show-prod">My Products</a></li>
            <% } %>
        </ul>

        <ul class="main-header__item-list">
            <% if(!isAuth) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/main-login' ? 'active' : '' %>" href="/login"> Login </a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/main-signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form class="logout-btn" action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <i class="fas fa-power-off"></i>
                        <button type="submit"> Logout </button> 
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

