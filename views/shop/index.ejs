<body>
    <%- include('../includes/nav.ejs')%>
    
    <main>
        <% if(prods.length > 0) { %>
            <div class="grid">
                <% prods.forEach(product => { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.name %></h1>
                        </header>
                        <div class="card__image">
                            <img src="/<%= product.image %>" alt="<%= product.name %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.location %></h2>
                            <% prods.comments.forEach(comment => { %>
                                <p class="product__description"><%= comment.message %></p>
                            <% }) %>
                        </div>
                    </article>
                <% }) %>
            </div>
            <section class="pagination">
                <!-- <a href="/?page=1">1</a> this would always yield 1 even on 1st page -->
                <% if(currentPage != 1) { %>
                    <a href="/?page=1">1</a>
                <% } %>
                <% if(prevPage && prevPage != 1) { %>
                    <a href="/?page=<%= prevPage %>"><%= prevPage %></a>
                <% } %>
                    <a href="/?page=<%= currentPage %>" class="active"><%= currentPage %></a>
                <% if(hasNextpage) { %>
                    <a href="/?page=<%= nextPage %>"><%= nextPage %></a>
                <% } %>
                <% if(currentPage != lastPage && currentPage != semilastPage) { %>
                    <a href="/?page=<%= lastPage %>"><%= lastPage %></a>
                <% } %>
                <script>
                    console.log("stuff here")
                </script>
            </section>
        <% } else { %>
            <h1>No  Products Entered</h1>
        <% } %>
    </main>

